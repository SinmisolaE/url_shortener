{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=urlshortenerdb;User=root;Password=forgotfirst;"
  },
  "AppSettings": {
    "BaseUrl": ""
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCodes": 429,
    "GeneralRules": [
      {
        "Endpoint": "*/url/*",
        "Period": "1m",
        "Limit": 5,
        "QuotaExceededResponse": {
          "Content": "{{\"error\": \"Rate limit exceeded. Maximum allowed: {0} per {1}.\"}}",
          "Content-Type": "application/json",
          "StatusCode": 429
        }
      },

      {

        "Endpoint": "POST:/url/generate",
        "Period": "1m",
        "Limit": 5,
        "QuotaExceededResponse": {
          "Content": "{{\"error\": \"Rate limit exceeded for creating URLs. Wait a little while\"}}",
          "Content-Type": "application/json",
          "StatusCode": 429
        }
      }
    ]

  }
}
